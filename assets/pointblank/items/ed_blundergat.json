      "condition": "ammoCount > 0"
    },
    {
      "name": "animation.model.idle",
      "duration": 2960,
      "condition": "ammoCount == 0"
    }
  ],


  // Now starts Inspect Animations
  "inspectAnimations": [
    {
      "name": "animation.model.inspect",
      "duration": 8240,
      "condition": "ammoCount > 0"
    },

    {
      "name": "animation.model.inspect",
      "duration": 8240,
      "condition": "ammoCount == 0"
    }
  ],


